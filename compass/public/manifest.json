{
  
  "name": "Campus Compass",

  "short_name": "IITK",

  "description": "A Progressive Web App for campus navigation and information at IIT Kanpur.",

  "start_url": "/",

  "display": "standalone",
  "display_override": ["window-controls-overlay"],

  "orientation": "portrait",

  "background_color": "#ffffff",

  "theme_color": "#000000",

  "icons": [
    {
      "src": "/icons/IITK.avif",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/icon/IITK.avif",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon/IITK.avif",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  "screenshots": [
    {
      "src": "/icons/preview.png",
      "sizes": "540x720",
      "type": "image/png"
    }
  ],

  "shortcuts": [
    {
      "name": "Open Map",
      "short_name": "Map",
      "description": "Quick access to the campus map",
      "url": "/map",
      "icons": [
        {
          "src": "/icon/IITK.avif",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+campuscompass",
      "url": "/?q=%s"
    }
  ]
}
